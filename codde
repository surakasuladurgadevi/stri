#include <stdio.h>
#include <string.h>
int main ()
{
   int i = 0;
   char ch, s[1000];

   printf("enter a string\n");
   gets(s);
   
   while (s[i] != '\0') 
   {
      ch = s[i];
      if (ch <= 'a' && ch >= 'z')
      {
         s[i] = s[i] - 1;
      }
      else if (ch >= 'a' && ch <= 'z')
      {
         s[i] = s[i] + 1;  
      }
      i++;  
   }
   printf("output of given string is:\n");
   printf("%s\n", s);

   return 0;
}
